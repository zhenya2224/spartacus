{
  "name": "storefrontapp-e2e-cypress",
  "version": "3.0.0",
  "main": "index.js",
  "author": "SAP, Spartacus team",
  "license": "Apache-2.0",
  "scripts": {
    "cy:open": "cypress open",
    "cy:open:b2b": "cypress open --env BASE_SITE=powertools-spa,OCC_PREFIX_USER_ENDPOINT=orgUsers",
    "cy:run": "cypress run",
    "cy:run:b2b": "cypress run --env BASE_SITE=powertools-spa,OCC_PREFIX_USER_ENDPOINT=orgUsers",
    "cy:run:core": "cypress run --spec \"cypress/integration/**/*.core-e2e-spec.ts\"",
    "cy:run:ci": "cypress run --config-file $CYPRESS_CONFIG --record --key $CYPRESS_KEY --tag \"b2c,all\" --parallel --group B2C --spec \"cypress/integration/!(vendor|b2b|ssr)/**/*e2e-spec.ts\"",
    "cy:run:ci:core": "cypress run --config-file $CYPRESS_CONFIG --record --key $CYPRESS_KEY --tag \"b2c,core\" --parallel --group B2C --spec \"cypress/integration/!(vendor|b2b|ssr)/**/*.core-e2e-spec.ts\"",
    "cy:run:ci:core:b2b": "cypress run --config-file $CYPRESS_CONFIG --record --key $CYPRESS_KEY --tag \"b2b,core\" --parallel --group B2B --spec \"cypress/integration/b2b/regression/**/*.core-e2e-spec.ts\"",
    "cy:run:ci:ssr": "cypress run --config-file $CYPRESS_CONFIG --config baseUrl=http://localhost:4000 --record --key $CYPRESS_KEY --tag \"ssr,all\" --parallel --group SSR --spec \"cypress/integration/ssr/pages.core-e2e-spec.ts\"",
    "cy:run:ci:b2b": "cypress run --config-file $CYPRESS_CONFIG --record --key $CYPRESS_KEY --tag \"b2b,all\" --parallel --group B2B --spec \"cypress/integration/b2b/regression/**/*e2e-spec.ts\"",
    "cy:run:ci:cds": "cypress run --config-file $CYPRESS_CONFIG --record --key $CYPRESS_KEY --tag \"2011,b2c,all-cds\" --group CDS --spec \"cypress/integration/vendor/cds/**/*.core-e2e-spec.ts\"",
    "cy:run:product-configurator-vc": "cypress run --spec \"cypress/integration/**/*-configurator*.*e2e-spec.ts\"",
    "cy:run:cpq": "cypress run  --config-file cypress.cpq.json --spec \"cypress/integration/**/cpq-configuration.core-e2e-spec.ts\"",
    "cy:run:ci:cdc": "cypress run --config-file $CYPRESS_CONFIG --record --key $CYPRESS_KEY --tag \"2005,cdc\" --group CDC --spec \"cypress/integration/vendor/cdc/**/*.e2e-spec.ts\"",
    "cy:run:ci:digital-payments": "cypress run --config-file $CYPRESS_CONFIG --record --key $CYPRESS_KEY --tag \"2105,digital-payments\" --group DIGITAL-PAYMENTS --spec \"cypress/integration/vendor/digital-payments/*.e2e-spec.ts\""
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^5.9.1",
    "@testing-library/cypress": "^8.0.1",
    "cypress": "^8.5.0",
    "cypress-file-upload": "^5.0.8"
  }
}
